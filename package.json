{
  "name": "typed-restana-app",
  "version": "1.0.0",
  "description": "Type-safe Restana service with Zod validation and OpenAPI generation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/examples/server.ts",
    "start": "node dist/examples/server.js",
    "generate-openapi": "ts-node typed-restana-app/scripts/generate-typed-openapi.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "install-deps": "pnpm install",
    "quick-start": "pnpm run install-deps && pnpm run dev"
  },
  "keywords": [
    "restana",
    "typescript",
    "zod",
    "validation",
    "openapi",
    "type-safe",
    "api",
    "rest"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "restana": "^4.9.7",
    "zod": "^4.0.14",
    "zod-to-json-schema": "^3.24.6",
    "cors": "^2.8.5",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/cors": "^2.8.17",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}