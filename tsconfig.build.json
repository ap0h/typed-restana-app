{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "noEmit": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "tests/**/*",
    "examples/**/*",
    "src/scripts/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "node_modules",
    "lib"
  ]
}